{
  "name": "otho",
  "version": "0.0.1",
  "description": "A tiny javascript library for handling and animating images",
  "main": "index.js",
  "scripts": {
    "build": "browserify src/index.js -t [ babelify --presets [ es2015 ] ] | uglifyjs > dist/otho.min.js",
    "test": "mocha --compilers js:babel-register ./test",
    "cover": "babel-node node_modules/babel-istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha -- test --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fulhamcrazy/otho.git"
  },
  "keywords": [
    "images",
    "javascript",
    "library",
    "animation"
  ],
  "author": "Louie Colgan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fulhamcrazy/otho/issues"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "homepage": "https://github.com/fulhamcrazy/otho#readme",
  "devDependencies": {
    "babel-core": "^6.18.0",
    "babel-istanbul": "^0.11.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "babelify": "^7.3.0",
    "mocha": "^3.1.2",
    "uglifyify": "^3.0.4"
  }
}
