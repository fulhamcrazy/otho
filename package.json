{
  "name": "otho",
  "version": "0.1.0",
  "description": "A tiny javascript library for handling and animating images",
  "main": "dist/otho.js",
  "scripts": {
    "build:unmin": "browserify src/index.js -s Otho -t babelify -o dist/otho.js",
    "build:min": "browserify src/index.js -s Otho -t babelify | uglifyjs > dist/otho.min.js",
    "build": "npm run build:unmin && npm run build:min && node build/banner",
    "lint": "eslint src/**/*",
    "watch": "node build/mi5 -s src -c \"npm run build\"",
    "test": "mocha --compilers js:babel-register -r jsdom-global/register",
    "cover": "babel-node node_modules/babel-istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha --report lcovonly test --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fulhamcrazy/otho.git"
  },
  "keywords": [
    "images",
    "javascript",
    "library",
    "preload"
  ],
  "author": "Louie Colgan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fulhamcrazy/otho/issues"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "homepage": "https://github.com/fulhamcrazy/otho#readme",
  "devDependencies": {
    "babel-core": "^6.18.0",
    "babel-istanbul": "^0.11.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "babelify": "^7.3.0",
    "chokidar": "^1.6.1",
    "colors": "^1.1.2",
    "command-line-args": "^3.0.3",
    "coveralls": "^2.11.14",
    "eslint": "^3.11.1",
    "jsdom": "^9.8.3",
    "jsdom-global": "^2.1.0",
    "mocha": "^3.1.2",
    "mocha-lcov-reporter": "^1.2.0",
    "tree-kill": "^1.1.0",
    "uglifyify": "^3.0.4"
  }
}
